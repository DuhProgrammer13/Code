<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleview="http://schemas.android.com/apk/res/com.kopperkow.silverrush"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_silver"
    tools:context="com.kopperkow.silverrush.MainActivity" >

    <RelativeLayout
        android:id="@+id/full_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#050505"
                android:fadingEdge="horizontal"
                android:scaleType="center"
                android:src="@drawable/silver_rush_banner_2014" />
            
            <ScrollView
                android:layout_below="@id/myImageView"
                android:layout_height="match_parent"
                android:layout_width="match_parent" >
                <LinearLayout
                    android:id="@+id/announcements_sv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="#555" />

        <RelativeLayout
            android:id="@+id/button_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/button_pics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" >

                <com.kopperkow.silverrush.libraries.CircleView
                    android:id="@+id/circle_view_pic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    circleview:cFillColor="@color/purple" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/camera" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" >

                <com.kopperkow.silverrush.libraries.CircleView
                    android:id="@+id/circle_view_calendar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    circleview:cFillColor="@color/purple" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" >

                <com.kopperkow.silverrush.libraries.CircleView
                    android:id="@+id/circle_view_donate"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    circleview:cFillColor="@color/purple" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/heart" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" >

                <com.kopperkow.silverrush.libraries.CircleView
                    android:id="@+id/circle_view_settings"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    circleview:cFillColor="@color/purple" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/setting" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center_button_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:visibility="visible" >

                <com.kopperkow.silverrush.libraries.CircleView
                    android:id="@+id/circle_view_center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    circleview:cFillColor="@color/purple" />

                <ImageView
                    android:id="@+id/image_view_center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/heart" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/announcement_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_material_dark"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:orientation="horizontal" >

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:onClick="goBack"
                android:background="@drawable/ic_action_back" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="@string/activity_label"
                android:textColor="#FFF"
                android:onClick="goBack"
                android:textSize="20sp" >
            </Button>
        </LinearLayout>
        
        <TextView
            android:id="@+id/announcement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:layout_below="@id/top_bar"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="Filler" />
        
        <TextView
            android:id="@+id/announcement_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/announcement_title"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Filler"
            android:textColor="@color/white"
            android:textSize="30sp" />
        
    </RelativeLayout>

</RelativeLayout>